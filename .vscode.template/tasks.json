// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Xvfb",
      "type": "shell",
      "command": "pgrep Xvfb > /dev/null && echo 'Xvfb already running' || exec Xvfb :99 -screen 0 1024x768x24 2>/dev/null",
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Start Xvfb"
    }
  ]
}
